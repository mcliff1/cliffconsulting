{
  "name": "Cliff Consulting Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:18",
  // "runArgs": ["--privileged"], // Remove if not strictly needed,
  "remoteUser": "node",
  "postCreateCommand": "npm install && git config --global user.name \"Matt Cliff\" && git config --global user.email \"matt@denvercliffs.com\"",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [3000],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workspace"
}